# Dockerfile para desenvolvimento do frontend
FROM node:16-alpine

WORKDIR /app

# Instalar dependências
COPY package*.json ./
RUN npm install

# Copiar código fonte
COPY . .

# Expor porta
EXPOSE 3000

# Comando para desenvolvimento
CMD ["npm", "run", "serve", "--", "--host", "0.0.0.0", "--port", "3000"]
